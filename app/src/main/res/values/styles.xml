<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="OtherText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorTextAccent</item>
    </style>

    <style name="LocationText" parent="OtherText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SearchView" parent="OtherText">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="height">35dp</item>
        <item name="android:queryHint">@string/field_search</item>
    </style>

</resources>
