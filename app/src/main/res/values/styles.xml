<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:autoCompleteTextViewStyle">@style/AppAutoTextCompleteStyle</item>
        <item name="backgroundColor">@color/colorMainBackground</item>
    </style>

    <style name="OtherText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorTextAccent</item>
    </style>

    <style name="LocationText" parent="OtherText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppAutoTextCompleteStyle" parent="Base.V7.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textSize">16dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="SearchView" parent="OtherText">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="height">50dp</item>
        <item name="android:queryBackground">@null</item>
        <item name="android:queryHint">@string/field_search</item>
        <item name="background">@drawable/border_10</item>
        <item name="backgroundTint">@color/white</item>
        <item name="commitIcon">@drawable/ic_search</item>
        <item name="iconifiedByDefault">false</item>
    </style>

</resources>
